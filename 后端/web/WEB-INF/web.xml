<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>AssignmentManageServlet</servlet-name>
        <servlet-class>servlet.AssignmentManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoticeManageServlet</servlet-name>
        <servlet-class>servlet.NoticeManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResourceManageServlet</servlet-name>
        <servlet-class>servlet.ResourceManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OnlineTestManageServlet</servlet-name>
        <servlet-class>servlet.OnlineTestManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SectionManageServlet</servlet-name>
        <servlet-class>servlet.SectionManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>servlet.DownloadServlet</servlet-class>
    </servlet>
    <!--<servlet>-->
        <!--<servlet-name>PostManageServlet</servlet-name>-->
        <!--<servlet-class>servlet.PostManageServlet</servlet-class>-->
    <!--</servlet>-->
    <!--<servlet>-->
        <!--<servlet-name>ReplyManageServlet</servlet-name>-->
        <!--<servlet-class>servlet.ReplyManageServlet</servlet-class>-->
    <!--</servlet>-->

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SectionManageServlet</servlet-name>
        <url-pattern>/section/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentManageServlet</servlet-name>
        <url-pattern>/assignment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoticeManageServlet</servlet-name>
        <url-pattern>/notice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResourceManageServlet</servlet-name>
        <url-pattern>/resource</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OnlineTestManageServlet</servlet-name>
        <url-pattern>/online_test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/resource/file</url-pattern>
        <url-pattern>/assignment/file</url-pattern>
        <url-pattern>/assign_submit/file</url-pattern>
        <url-pattern>/online_test/file</url-pattern>
        <url-pattern>/test_submit/file</url-pattern>
    </servlet-mapping>
</web-app>